.card
  .card-body.p-0
    .card-header
      %h5.card-title #{f_icon 'heart', color:'#A33', style:'text-shadow: 2px 2px #DDD'} Recent Activity
    - if @collapsed_activities && @collapsed_activities.size > 0
      = render partial: '/public_activity/index', locals: {activities: @collapsed_activities}
    - else
      %br
      %center There is nothing active at this time.
      %br