%ul.list-group
  - if controller_name != 'sessions'
    %li.list-group-item= link_to "Sign in", new_session_path(resource_name)
  -# - if devise_mapping.registerable? && controller_name != 'registrations'
  -#   %li.list-group-item= link_to "Sign up for an account", new_registration_path(resource_name)
  - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    %li.list-group-item= link_to "Forgot your password?", new_password_path(resource_name)
  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li.list-group-item= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name)
  - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
    %li.list-group-item= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name)
