
.card.mb-5
  .card-header.pb-1
    = link_to question_path(result.question) do
      %h4.mb-0.pb-0 <b>Answer to:</b> #{result.question.title}

  .card-body
    .row
      .order-2.order-sm-1.col-sm-9.col-md-9.col-lg-10
        = raw sanitize(HTML_Truncator.truncate(render_md(result.text), 600, {:length_in_chars => true}))

      .order-1.order-sm-2.col-sm-3.col-md-3.col-lg-2
        .small_light_title Answered by #{render_avatar(result.creator, size: :small)}
        .small= smart_display result.created_at

        .small_light_title Last updated:
        .small= smart_display(result.updated_at)

        = render_tag_links result.tags if result.respond_to?(:tags)




